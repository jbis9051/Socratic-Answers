<div class="tabs">
    <a href="/users/<%= user.id %>" class="tab <%= tab === "main" ? "active" : "" %>">Profile</a>
    <% if(site.is_qa) { %>
        <a href="/users/answers/<%= user.id %>" class="tab <%= tab === "answers" ? "active" : "" %>">Answers</a>
    <% } %>
    <% if(currentUser && currentUser.id === user.id) { %>
        <% if(site.is_qa) { %>
            <a href="/users/questions" class="tab <%= tab === "questions" ? "active" : "" %>">Questions</a>
        <% } %>
        <a href="/users/edit" class="tab <%= tab === "edit" ? "active" : "" %>">Edit</a>
    <% } %>
</div>
