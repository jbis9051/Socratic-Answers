<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <%- include('../../components/common/standard-head') %>
    <link rel="stylesheet" href="/css/common/tabs.css">
    <link rel="stylesheet" href="/css/users/form.css">
    <link rel="stylesheet" href="/css/users/profile.css">
    <title><%= user.username %>'s Profile</title>
</head>
<body>
<%- include('../../components/common/topbar' ) %>
<div class="main-content">
    <%- include('./components/tabs' ) %>

    <div class="profile-content">
        <div class="profile-top">
            <div class="profile-image-wrapper">
                <img height="164" width="164" src="<%= user.profile_image %>">
                <h2 class="username"><%= user.username %></h2>
            </div>
            <div class="profile-meta-wrapper">
                <ul>
                    <% [user.created.toLocaleString(), user.location].filter(point => !!point).forEach(point => { %>
                        <li><%= point %></li>
                    <% });

                    [user.website, user.github].filter(point => !!point).forEach(point => { %>
                        <li><a target="_blank" href="<%= point %>"><%= point %></a></li>
                    <% }) %>
                </ul>
            </div>
        </div>
        <div class="profile-content-wrapper">
            <div class="profile-bio">
                <%- user.renderedBio %>
            </div>
        </div>
    </div>

</div>
</body>
</html>
